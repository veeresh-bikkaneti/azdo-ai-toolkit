{
  "name": "azdo-pbi-analyzer",
  "displayName": "Azure DevOps PBI Analyzer",
  "description": "Analyze Azure DevOps PBIs to generate Gherkin specs, Cypress & Playwright tests, and Manual Test Cases.",
  "version": "1.0.3",
  "publisher": "RUNTechnologyConsultingServicesLLC",
  "repository": {
    "type": "git",
    "url": "https://github.com/veeresh-bikkaneti/azdo-ai-toolkit"
  },
  "bugs": {
    "url": "https://github.com/veeresh-bikkaneti/azdo-ai-toolkit/issues"
  },
  "homepage": "https://github.com/veeresh-bikkaneti/azdo-ai-toolkit#readme",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Testing",
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "azdoPbiAnalyzer.analyzePbi",
        "title": "QA the PBI"
      },
      {
        "command": "azdoPbiAnalyzer.openPanel",
        "title": "Azure DevOps: Open Analyzer Panel"
      },
      {
        "command": "azdoPbiAnalyzer.installAgents",
        "title": "Azure DevOps: Install AI Agents and Workflows"
      }
    ],
    "chatParticipants": [
      {
        "id": "azdo.pbi-analyst",
        "name": "AzDO PBI Analyst",
        "description": "Analyze Product Backlog Items with multiple QA personas",
        "isSticky": true,
        "commands": [
          {
            "name": "analyze",
            "description": "Full multi-persona PBI analysis"
          },
          {
            "name": "critical-review",
            "description": "Critical thinking analysis of requirements"
          },
          {
            "name": "qa-engineer",
            "description": "Test case design and coverage analysis"
          },
          {
            "name": "qa-architect",
            "description": "Testing strategy and framework recommendations"
          },
          {
            "name": "manual-test",
            "description": "Exploratory testing and UX focus"
          },
          {
            "name": "automation",
            "description": "Test automation strategy and implementation"
          }
        ]
      }
    ],
    "configuration": {
      "title": "Azure DevOps PBI Analyzer",
      "properties": {
        "azdoPbiAnalyzer.organization": {
          "type": "string",
          "default": "",
          "description": "Default Azure DevOps organization URL (e.g., https://dev.azure.com/yourorg)"
        }
      }
    }
  },
  "scripts": {
    "release": "npm version patch && vsce package",
    "vscode:prepublish": "npm run package",
    "compile": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "watch": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --watch",
    "package": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --minify",
    "test": "npm run test-compile && node ./out/test/runTest.js",
    "test:unit": "mocha -r ts-node/register --ui tdd src/test/suite/generators.test.ts",
    "test-compile": "tsc -p ./"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.80.0",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^2.19.0",
    "esbuild": "^0.27.2",
    "glob": "^7.2.3",
    "mocha": "^11.7.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "azure-devops-node-api": "^12.0.0"
  }
}
